{
	"name": "reaction",
	"version": "2.3.3",
	"private": true,
	"description": "Add reaction emojis to your favorite comments on Wikimedia project talk pages.",
	"type": "module",
	"release": {
		"branches": [
			"main"
		]
	},
	"scripts": {
		"build": "node scripts/build.mjs",
		"build:debug": "node scripts/build.mjs --debug",
		"build:wikitext": "node scripts/build-wikitext.mjs",
		"build:ci": "node scripts/build.mjs && node scripts/build-wikitext.mjs",
		"watch": "node scripts/build.mjs --watch",
		"watch:debug": "node scripts/build.mjs --watch --debug",
		"lint": "eslint \"src/**/*.{ts,tsx}\" --no-inline-config",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"devDependencies": {
		"@types/emoji-mart-vue-fast": "file:types/emoji-mart-vue-fast",
		"@types/node": "^24.10.1",
		"@types/oojs-ui": "^0.49.4",
		"@typescript-eslint/eslint-plugin": "^8.13.0",
		"@typescript-eslint/parser": "^8.13.0",
		"esbuild": "^0.27.2",
		"eslint": "^9.14.0",
		"jsdom": "^27.4.0",
		"types-mediawiki": "^2.0.0",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"@types/moment-timezone": "^0.5.13",
		"vue": "^3.5.13",
		"emoji-mart-vue-fast": "file:vendor/emoji-mart-vue-fast",
		"moment-timezone": "^0.6.0"
	}
}
