{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Reaction on Wikipedia",
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"url": "https://zh.wikipedia.org/wiki/User_talk:SuperGrey/Reaction_Testing_Ground",
			"webRoot": "${workspaceFolder}",
			"addonPath": "${workspaceFolder}/.debug",
			"preLaunchTask": "watch-debug-extension",
			"reloadOnChange": {
				"watch": [
					"${workspaceFolder}/.debug/Gadget-Reaction*.js",
					"${workspaceFolder}/.debug/inject.js",
					"${workspaceFolder}/.debug/manifest.json"
				],
				"debounce": 200
			},
			"skipFiles": [
				"**/load.php*",
				"**/ext.*.js"
			],
			"profileDir": "${workspaceFolder}/.debug/firefox-profile",
			"keepProfileChanges": true
		}
	]
}